<link href={{localDomain '/stylesheets/custom.css'}} rel="stylesheet" />

<div class="card card-register mx-auto mt-5">
    <div class="card-header">Infomation</div>
    <div class="card-body">
        {{#form "/student/edit/3"}}
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-label-group input-css">
                        {{input_validation "name" student.name errors
                        class="form-control" }}
                        <label for="firstName">Name</label>
                    </div>
                    {{#field_errors "name" errors}}
                    {{{errorMsg this.msg}}}
                    {{/field_errors}}
                </div>
                <div class="col-md-6">
                    <div class="form-label-group input-css">
                        {{input_validation "class" student.class errors
                        class="form-control" }}
                        <label for="lastName">Class</label>
                    </div>
                    {{#field_errors "class" errors}}
                    {{{errorMsg this.msg}}}
                    {{/field_errors}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-label-group">
                {{input_validation "phone_number" student.phone_number errors
                class="form-control" }}
                <label for="inputEmail">Phone Number</label>
            </div>
            {{#field_errors "phone_number" errors}}
            {{{errorMsg this.msg}}}
            {{/field_errors}}
        </div>
        <div class="form-group">
            <div class="form-label-group">
                {{input "id_line" student.id_line class="form-control" disabled="true" }}
                <input type="hidden" name="id_line" value="{{student.id_line}}">
                <label for="inputPassword">LineID</label>
            </div>
        </div>
        <input type="hidden" name="studentId" value="{{student.id}}">
        {{button "back" "Back" type='button' class="btn btn-secondary btn-block"}}
        {{submit "save" "Submit form" class="btn btn-primary btn-block"}}
        {{/form}}
    </div>
</div>
{{#> fullName}}this block{{/fullName}}
